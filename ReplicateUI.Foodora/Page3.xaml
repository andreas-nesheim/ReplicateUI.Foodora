<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ReplicateUI.Foodora.Page3"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:ReplicateUI.Foodora.Helpers"
    BackgroundColor="{DynamicResource SecondaryColor}">

    <ScrollView>
        <Grid RowDefinitions="260,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="25">
            <Image
                Aspect="AspectFill"
                HeightRequest="260"
                Source="cheeseburger.jpg"
                WidthRequest="400">
                <Image.Clip>
                    <GeometryGroup>
                        <RectangleGeometry Rect="0,0,400,100" />
                        <!--  Center property does not seem to work (as of RC1)  -->
                        <EllipseGeometry
                            Center="100,100"
                            RadiusX="200"
                            RadiusY="100" />
                    </GeometryGroup>
                </Image.Clip>
            </Image>
        </Grid>
    </ScrollView>
</ContentPage>
